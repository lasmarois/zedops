# Multi-stage build for Go agent
FROM golang:latest AS builder

WORKDIR /build

# Copy go module files
COPY go.mod go.sum* ./

# Download dependencies
RUN go mod download

# Copy source code
COPY *.go ./

# Build the agent
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o zedops-agent .

# Use scratch for minimal final image (optional - for deployment)
FROM scratch
# Copy CA certificates for TLS connections
COPY --from=builder /etc/ssl/certs/ca-certificates.crt /etc/ssl/certs/
COPY --from=builder /build/zedops-agent /zedops-agent
ENTRYPOINT ["/zedops-agent"]
