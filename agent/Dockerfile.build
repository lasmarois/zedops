# Multi-stage build for Go agent
FROM golang:latest AS builder

WORKDIR /build

# Copy go module files
COPY go.mod go.sum* ./

# Copy source code first to allow go mod tidy to see imports
COPY *.go ./

# Update dependencies and generate go.sum
RUN go mod tidy

# Download dependencies
RUN go mod download

# Build the agent
ARG VERSION=dev
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s -X main.Version=${VERSION}" -o zedops-agent .

# Use scratch for minimal extraction container (binary runs on host, not in container)
FROM scratch
COPY --from=builder /build/zedops-agent /zedops-agent
ENTRYPOINT ["/zedops-agent"]
