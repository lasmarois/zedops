# Multi-stage build for Go agent
FROM golang:latest AS builder

WORKDIR /build

# Copy go module files
COPY go.mod go.sum* ./

# Download dependencies
RUN go mod download

# Copy source code
COPY *.go ./

# Build the agent
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o zedops-agent .

# Use alpine for minimal final image with DNS support
FROM alpine:latest
# Install CA certificates
RUN apk --no-cache add ca-certificates
# Copy binary from builder
COPY --from=builder /build/zedops-agent /zedops-agent
ENTRYPOINT ["/zedops-agent"]
